# Database Configuration (Baseline MVP)
DATABASE_URL=postgresql://user:password@localhost:5432/veri_mvp
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=veri_mvp

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Redis Configuration (Optional for MVP)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Kafka/Redpanda Configuration (Optional for MVP)
USE_REDPANDA=false
KAFKA_BROKERS=localhost:19092

# MongoDB Configuration (Signal Engine - Phase 2)
USE_MONGO=false
READ_FROM_MONGO=false
MONGO_URL=mongodb://localhost:27017
MONGO_DB_NAME=veri_signal

# Feature Flags
HYBRID_SEARCH=false
VECTOR_SEARCH=false
MEMORY_DECAY=false
SIGNAL_EXTRACTION=false

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_STREAMING=false
USE_OPENAI=false
OPENAI_API_KEY=your-openai-api-key

# OAuth Credentials (Social Platforms)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Application Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5000

# Monitoring (Optional)
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn

# Cost Control
MAX_MONTHLY_COST_PER_CREATOR=3.30
CIRCUIT_BREAKER_THRESHOLD=100
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100